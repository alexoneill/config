%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%%% Package Includes
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

%% The base requirements
\RequirePackage{preamble}

%% End requires
\ProcessOptions\relax

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%%% Commands / Macros
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

% Probabilities
\newcommand{\PR}[1]{\mathbb{P}\p{#1}}
\newcommand{\CPR}[2]{\mathbb{P}\p{#1 \given #2}}

% Expected Values
\NewDocumentCommand{\EV}{ m g }{%
  \IfNoValueTF{#2}{%
    \mathbb{E}\p[|]{#1}%
   }{%
    \mathbb{E}_{#1}\p[|]{#2}%
   }}
\newcommand{\CEV}[2]{\mathbb{E}\p[|]{#1 \given #2}}

% Distributions
\newcommand{\PMF}[2]{\text{f}_{#1}\p{#2}}
\newcommand{\PDF}[2]{\text{F}_{#1}\p{#2}}
\newcommand{\JPMF}[4]{\text{P}_{#1, #2}\p{#3, #4}}
\newcommand{\CPMF}[3]{\text{P}_{#1 \given #2}\p{#3}}

% Variance
\NewDocumentCommand{\VAR}{ m g }{%
  \IfNoValueTF{#2}{%
    \text{Var}\p{#1}%
  }{%
    \text{Var}_{#1}\p{#2}%
  }}
\newcommand{\COV}[2]{\text{Cov}\p{#1, #2}}
\newcommand{\CORR}[2]{\text{Corr}\p{#1, #2}}
\newcommand{\ZTRANS}[2]{\hat{#1}\p{#2}}

% Common variables
\newcommand{\om}{\omega}
\newcommand{\OM}{\Omega}

%% Squiggle alternates
\newcommand{\squiggle}[1]{\widetilde{#1}}
\newcommand{\SPR}[1]{\squiggle{\mathbb{P}}\p{#1}}
\newcommand{\SEV}[1]{\squiggle{\mathbb{E}}\p[|]{#1}}
\newcommand{\CSEV}[2]{\squiggle{\mathbb{E}}\p[|]{#1 \given #2}}

