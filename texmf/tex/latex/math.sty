%% Math operators
\DeclareMathOperator*{\argmax}{ARG\,MAX}
\DeclareMathOperator*{\argmin}{ARG\,MIN}

%% Extra array space (matrices)
\renewcommand\arraystretch{1.5}

%% Useful commands
% Proofs
\newcommand{\given}[0]{\;|\;}
\newcommand{\goesto}[0]{\rightarrow}
\newcommand{\such}[0]{\;:\;}

% Min, Max
\newcommand{\MAX}[2]{\text{max}\left\{#1, #2\right\}}
\newcommand{\MIN}[2]{\text{min}\left\{#1, #2\right\}}

% Modulus
\newcommand{\MOD}[3]{#1 \equiv #2 \; \text{mod} \; #3}
\newcommand{\NMOD}[3]{#1 \not\equiv #2 \; \text{mod}\; #3}

% Other
\newcommand{\RANGE}[1]{\text{range}(#1)}
\newcommand{\GCD}[2]{\text{gcd}(#1, #2)}
\newcommand{\IMG}[2]{\text{Im}_{#1}(#2)}
\newcommand{\PIMG}[2]{\text{PreIm}_{#1}(#2)}

% Number theory
\newcommand{\N}[0]{\mathbb{N}}
\newcommand{\Z}[0]{\mathbb{Z}}
\newcommand{\Q}[0]{\mathbb{Q}}
\newcommand{\R}[0]{\mathbb{R}}
\newcommand{\C}[0]{\mathbb{C}}
\newcommand{\F}[0]{\mathbb{F}}
\newcommand{\PSET}[1]{\mathcal{P}(#1)}
\renewcommand{\P}[0]{\mathbb{P}}

% Calculus
\newcommand{\DER}[2]{\frac{d#1}{d#2}}

% Matricies
\newcommand{\DET}[1]{\text{det}\left(#1\right)}

% Utilities
\renewcommand{\TH}[0]{^\text{th}}

